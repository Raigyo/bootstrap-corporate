{# The main page of the application #}

{% extends "_common.njk" %}

{% block content %}

<article id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel" data-interval="3000" style="width: 100%">
  <!-- Indicators -->
  <ul class="carousel-indicators">
    <li data-target="#carouselExampleControls" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleControls" data-slide-to="1"></li>
    <li data-target="#carouselExampleControls" data-slide-to="2"></li>
  </ul>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="./img/img1.jpg" alt="©Photo by rawpixel on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">Creative Team Solutions</h3>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img2.jpg" alt="©Photo by Headway on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">IT Business Innovations</h3>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img3.jpg" alt="©Photo by Bench Accounting on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">Digital Incubation</h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</article>


<div class="container-fluid" id="clientQuote">
  <div class="row">
    <div class="col-md-6">
      <blockquote class="blockquote">
          <p class="mb-0">Good job guys! Really! I'm very happy now! You changed my life!</p>
          <footer class="blockquote-footer">Grumpy
          </footer>
      </blockquote>
    </div>
    <div class="col-md-6">
      <img src="./img/client.jpg" class="rounded-circle img-thumbnail" style="width:75%">
    </div>

  </div>
</div>

{% endblock %}
