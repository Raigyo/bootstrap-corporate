{# The main page of the application #}

{% extends "_common.njk" %}

{% block content %}

<article id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel" style="width: 100%">
  <!-- Indicators -->
  <ul class="carousel-indicators">
    <li data-target="#carouselExampleControls" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleControls" data-slide-to="1"></li>
    <li data-target="#carouselExampleControls" data-slide-to="2"></li>
  </ul>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="./img/img1.jpg" alt="©Photo by rawpixel on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">Creative Team Solutions</h3>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img2.jpg" alt="©Photo by Headway on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">IT Business Innovations</h3>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img3.jpg" alt="©Photo by Bench Accounting on Unsplash">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3">Digital 3.0 Incubations</h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</article>

{% endblock %}
