{# The main page of the application #}

{% extends "_common.njk" %}

{% block content %}
<article id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 80%; margin: 0 auto">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="./img/img1.jpg" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3 text-dark">Top délire !!!</h3>
        <p>On a des laptops sans marque</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img2.jpg" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3 text-dark">Pas besoins d'effets spéciaux...</h3>
        <p>C'est nous les effets spéciaux!</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./img/img3.jpg" alt="Third slide">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="display-3 text-dark">A la pointe du progrès !</h3>
        <p>(t'as vu je ressemble à Neo)</p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</article>

{% endblock %}
